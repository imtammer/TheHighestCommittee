# Docker Stacks - System-wide Environment Configuration
# Copy this file to .env and fill in with your actual values.
# DO NOT commit .env to version control.

# ============================================================================
# User/Permissions (Universal across all services)
# ============================================================================
PUID=1000
PGID=1000
TZ=America/Los_Angeles
UMASK=022
LOG_LEVEL=info

# ============================================================================
# System IPs & Hostnames
# ============================================================================
# Primary Docker host (arr stacks, media managers, bots, utilities)
PRIMARY_DOCKER_HOST=192.168.0.11
LOCAL_IP=192.168.0.11

# TamMediaBox - Media server host (Jellyfin, Dozzle remote agent)
# Hosts Docker containers for media streaming and monitoring
MEDIABOX_IP=192.168.0.13
MEDIABOX_DOZZLE_AGENT=${MEDIABOX_IP}:7007

# AI Docker host (for AI-related services and models)
AI_DOCKER_HOST=192.168.0.7

# NPM Plus (Nginx Proxy Manager) - Reverse Proxy server
NPMPLUS_IP=192.168.0.14
NPMPLUS_URL=https://${NPMPLUS_IP}:81
NPMPLUS_USERNAME=your_npm_email
NPMPLUS_PASSWORD=your_npm_password
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# TrueNAS (NAS & Docker host)
TRUENAS_IP=192.168.0.44
TRUENAS_URL=http://${TRUENAS_IP}
TRUENAS_USERNAME=your_truenas_user
TRUENAS_PASSWORD=your_truenas_password
TRUENAS_DOCKGE_URL=http://${TRUENAS_IP}:31014
TRUENAS_DOCKGE_USERNAME=your_dockge_user
TRUENAS_DOCKGE_PASSWORD=your_dockge_password

# UGREEN NAS DXP 4800 Plus (NAS & Docker host)
UGREEN_IP=192.168.0.8
UGREEN_URL=http://${UGREEN_IP}:9999
UGREEN_USERNAME=your_ugreen_user
UGREEN_PASSWORD=your_ugreen_password

# Tandoor Recipes (recipe manager)
TANDOOR_IP=192.168.0.6
TANDOOR_URL=http://${TANDOOR_IP}:8002
TANDOOR_EXTERNAL_URL=https://recipes.${DOMAIN_NAME}
TANDOOR_USERNAME=your_tandoor_user
TANDOOR_PASSWORD=your_tandoor_password

# PostgreSQL Server (central database)
POSTGRES_HOST=192.168.0.12
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}
ADMINER_URL=http://${POSTGRES_HOST}/adminer/

# phpIPAM (IP Address Management)
PHPIPAM_IP=192.168.0.116
PHPIPAM_URL=http://${PHPIPAM_IP}/
PHPIPAM_USERNAME=your_phpipam_user
PHPIPAM_PASSWORD=your_phpipam_password

# Traefik (Reverse Proxy)
TRAEFIK_IP=192.168.0.2
TRAEFIK_URL=https://${TRAEFIK_IP}/
TRAEFIK_DASHBOARD=http://${TRAEFIK_IP}:8080/dashboard/
TRAEFIK_USERNAME=your_traefik_user
TRAEFIK_PASSWORD=your_traefik_password

# Proxmox VE (Hypervisor)
PROXMOX_IP=192.168.0.40
PROXMOX_URL=https://${PROXMOX_IP}:8006/
PROXMOX_USERNAME=root
PROXMOX_PASSWORD=your_proxmox_password

# Legacy reference (maps to MEDIABOX_IP for backwards compatibility)
REMOTE_IP=${MEDIABOX_IP}

# Base domain name for external URLs and HTTPS certificates
DOMAIN_NAME=thehighestcommittee.com

# ============================================================================
# Shared Passwords & Credentials
# ============================================================================
# Root password for MariaDB/MySQL (use a strong, random password)
DB_ROOT_PASSWORD=your_secure_db_root_password

# Standard database user password (use a strong, random password)
DB_USER_PASSWORD=your_secure_db_user_password

# Shared service password (used for service-to-service auth, e.g., Jellyfin, Subsonic)
SHARED_SERVICE_PASSWORD=your_secure_service_password

# Admin/server password (used for game servers, web UIs)
ADMIN_PASSWORD=your_admin_password

# ============================================================================
# External Service URLs (referenced by multiple stacks)
# ============================================================================
# Overseerr (media request service)
OVERSEERR_URL=http://${LOCAL_IP}:5055
OVERSEERR_API_KEY=your_overseerr_api_key

# Jellyfin (media server) - hosted on TamMediaBox
JELLYFIN_SERVER=http://${MEDIABOX_IP}:8096
JELLYFIN_URL=https://jellyfin.${DOMAIN_NAME}
JELLYFIN_API_KEY=your_jellyfin_api_key
JELLYFIN_USERNAME=your_jellyfin_username

# Navidrome (music server)
NAVIDROME_URL=http://${LOCAL_IP}:4533
NAVIDROME_USERNAME=your_navidrome_user
NAVIDROME_PASSWORD=your_navidrome_password
NAVIDROME_SALT=your_generated_salt
NAVIDROME_TOKEN=your_generated_token

# Kavita (books/manga/comics reader)
KAVITA_URL=http://${LOCAL_IP}:5002
KAVITA_USERNAME=your_kavita_user
KAVITA_PASSWORD=your_kavita_password
KAVITA_API_KEY=your_kavita_api_key

# Audiobookshelf (audiobook streaming)
AUDIOBOOKSHELF_URL=http://${LOCAL_IP}:13378
AUDIOBOOKSHELF_API_KEY=your_audiobookshelf_api_key

# Lidarr (music manager)
LIDARR_URL=http://${LOCAL_IP}:8686
LIDARR_API_KEY=your_lidarr_api_key

# FlareSolverr (anti-bot solver for scrapers)
FLARESOLVERR_URL=http://${LOCAL_IP}:8191

# Plex (optional, for services that integrate with Plex)
PLEX_URL=http://192.168.1.13:32400

# Pocket-ID (OIDC authentication provider)
POCKET_ID_URL=https://auth.${DOMAIN_NAME}
POCKET_ID_INTERNAL=http://${LOCAL_IP}:1411
POCKET_ID_ENCRYPTION_KEY=your_base64_encryption_key
POCKET_ID_MAXMIND_KEY=your_maxmind_license_key

# ============================================================================
# Third-Party API Keys & Credentials (Sensitive - never commit!)
# ============================================================================
# The Movie Database (TMDB) API key
TMDB_API_KEY=your_tmdb_api_key

# YouTube Data API key (for Muse, other media bots)
YOUTUBE_API_KEY=your_youtube_api_key

# Spotify API credentials (for music bots)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Discord bot tokens (for Discord integrations)
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_TOKEN=your_discord_client_token

# ScreenScraper credentials (for ROM metadata)
SCREENSCRAPER_USER=your_screenscraper_username
SCREENSCRAPER_PASSWORD=your_screenscraper_password

# RetroAchievements API key (for ROM metadata)
RETROACHIEVEMENTS_API_KEY=your_retroachievements_api_key

# SteamGridDB API key (for ROM artwork)
STEAMGRIDDB_API_KEY=your_steamgriddb_api_key

# ============================================================================
# Port Overrides (for services with flexible port binding)
# ============================================================================
PORT=8191
SUGGESTARR_PORT=5000
TUNARR_SERVER_PORT=8888

# ============================================================================
# Optional: Per-Stack Environment File Overrides
# ============================================================================
# Uncomment and customize any of these to override stack-specific behavior.
# Most services will inherit from this base .env; add stack-specific values as needed.

